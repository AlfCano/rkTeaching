<!DOCTYPE rkplugin>
<document>
	<code file="dice.js" />
	<help file="dice.rkh" />
		
	<dialog label="Lanzamiento de dados" >
		<stretch/>
		<spinbox id="nsamples" label="Número de dados" default_precision="2" type="integer" initial="1" min="1" />
		<spinbox id="size" label="Número de lanzamientos" default_precision="2" type="integer" initial="1" min="1" />
		<checkbox id="sum" label="Incluir suma" value="TRUE" unchecked_value="FALSE"/>
		<checkbox id="mean" label="Incluir media" value="TRUE" unchecked_value="FALSE"/>
		<saveobject id="save" label="Guardar conjunto de datos" initial="dados" />
	</dialog>
</document>