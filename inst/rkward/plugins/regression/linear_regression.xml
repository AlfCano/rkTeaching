<!DOCTYPE rkplugin>
<document>
	<code file="linear_regression.js"/>
	<help file="linear_regression.rkh"/>
	
	<dialog label="Fitting Linear Model">
		<row id="row_vars">
			<varselector id="vars"/>
			<column>
				<varslot type="numeric" id="y" source="vars" required="true" label="Dependent variable"/>
				<varslot type="numeric" id="x" source="vars" required="true" multi="true" label="Independent variables"/>
				<checkbox id="intercept" label="Include intercept" checked="true"/>
				<saveobject id="save" label="Save model" initial="regression.model" checkable="true"/>
			</column>
		</row>
	</dialog>
	
	<wizard label="Fitting Linear Model">
		<page id="pag_vars">
			<text id="txt_var">
				Select the numeric dependent variable and one o more numeric independent variables.
				Finally, if you want to save de regression model, check de box and give the model a name. 
			</text>
			<copy id="row_vars" />
		</page>
	</wizard>
	
</document>
