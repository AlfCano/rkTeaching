<!DOCTYPE rkplugin>
<document>
	<code file="FrequencyTabulation.js" />
	<help file="FrequencyTabulation.rkh" />
	
	<logic>
		<convert id="grouped_mode" mode="equals" sources="grouped.state" standard="1"/>
		<connect client="groups.visible" governor="grouped_mode"/>
		<connect client="filter_embed.variable" governor="variable.available" />
	</logic>

	<dialog label="Distribuci칩n de frecuencias">
		<tabbook id="tabs">
			<tab label="Variables" id="tab_vars">
				<row id="row_vars">
					<varselector id="selector" />
					<column>
						<varslot id="variable" label="Variable a tabular" source="selector" required="true" />
						<checkbox id="grouped" label="Dibujar por grupos" value_unchecked="0" checked="false" />
						<varslot id="groups" label="Variable de agrupaci칩n:" multi="true" types="factor" source="selector" required="true"/>
						<embed id="filter_embed" component="rkTeaching::filter_embed"/>
					</column>
				</row>
			</tab>
		</tabbook>
	</dialog>
	<wizard label="Distribuci칩n de frecuencias">
		<page id="page_vars">
			<text id="txt_var">
				Seleccionar la variable a tabular. 
			</text>
			<copy id="selector" />
			<copy id="variable" />
		</page>
		<embed id="filter_embed" component="rkTeaching::filter_embed"/>		
	</wizard>
</document>
