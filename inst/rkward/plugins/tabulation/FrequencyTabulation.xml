<!DOCTYPE rkplugin>
<document>
	<code file="FrequencyTabulation.js" />
	<help file="FrequencyTabulation.rkh" />

	<logic>
		<convert id="grouped_mode" sources="grouped.state" mode="equals" standard="1"/>
		<connect client="groups.visible" governor="grouped_mode"/>
		<connect client="cells.variable" governor="variable.available" />
		<connect client="filter_embed.variable" governor="variable.available" />
	</logic>

	<dialog label="Frequency tabulation">
		<tabbook>
			<tab label="Variables" id="tab_vars">
				<row id="row_vars">
					<varselector id="selector" label="Select variable"/>
					<column>
						<varslot id="variable" label="Variable to tabulate" source="selector" required="true" />
						<checkbox id="grouped" label="Tabulate by groups" value_unchecked="0" checked="false" />
						<varslot id="groups" label="Grouping variable(s)" multi="true" types="factor" source="selector" required="true"/>
						<embed id="filter_embed" component="rkTeaching::filter_embed"/>
					</column>
				</row>
			</tab>
			<tab label="Classes" id="tab_cells">
				<frame id="intervals_frame" label="Grouping intervals" checkable="true" checked="false">
					<embed id="cells" component="rkTeaching::cells"/>
				</frame>
			</tab>
		</tabbook>
	</dialog>
	
	<wizard label="Frequency tabulation">
		<page id="page_vars">
			<text id="txt_var">
                            <p>Select the variable to tabulate.</p>
			</text>
			<copy id="selector" />
			<copy id="variable" />
		</page>
		<page id="page_grouped">
			<text id="txt_var">
                            <p>Check the box to tabulate the variable by groups. You must insert the grouping variables.</p>
			</text>
                        <copy id="selector"/>
			<copy id="grouped"/>
                        <copy id="groups"/>
		</page>
                <embed id="filter_embed" component="rkTeaching::filter_embed"/>
		<embed id="cells" component="rkTeaching::cells"/>
	</wizard>
</document>
