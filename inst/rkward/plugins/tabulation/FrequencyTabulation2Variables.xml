<!DOCTYPE rkplugin>
<document>
	<code file="FrequencyTabulation2Variables.js" />
	<help file="FrequencyTabulation2Variables.rkh" />
	
	<logic>
		<convert id="grouped_mode" sources="grouped.state" mode="equals" standard="1"/>
		<connect client="groups.visible" governor="grouped_mode"/>
		<connect client="filter_embed.variable" governor="var_row.available" />
		<connect client="cells_rows.variable" governor="var_rows.available" />
		<connect client="cells_columns.variable" governor="var_columns.available" />
	</logic>

	<dialog label="Two-variables frequency tabulation">
		<tabbook id="tabs">
			<tab label="Variables" id="tab_vars">
				<row id="row_vars">
					<varselector id="selector" />
					<column>
						<varslot id="var_rows" label="Row variable"  source="selector" required="true" />
						<varslot id="var_columns" label="Column variable" source="selector" required="true" />
						<checkbox id="grouped" label="Tabulate by groups" value_unchecked="0" checked="false" />
						<varslot id="groups" label="Grouping variable" multi="true" types="factor" source="selector" required="true"/>
						<embed id="filter_embed" component="rkTeaching::filter_embed"/>
						<stretch />
					</column>
				</row>
			</tab>
			<tab label="Frequency options" id="tab_freq">
				<checkbox id="relative_freq" label="Relative frequencies" value_unchecked="0" checked="false" />
				<checkbox id="marginal_freq" label="Marginal frequencies" value_unchecked="0" checked="false" />
				<stretch />
			</tab>
			<tab label="Row classes" id="tab_cells_rows">
				<frame id="intervals_rows_frame" label="Grouping intervals for the row variable" checkable="true" checked="false">
					<embed id="cells_rows" component="rkTeaching::cells"/>
				</frame>
			</tab>
			<tab label="Column classes" id="tab_cells_columns">
				<frame id="intervals_columns_frame" label="Grouping intervals for the column variable" checkable="true" checked="false">
					<embed id="cells_columns" component="rkTeaching::cells"/>
				</frame>
			</tab>		
		</tabbook>
	</dialog>
	
	<wizard label="Two-variables frequency tabulation">
		<page id="page_vars">
			<text id="txt_var">
                            <p>Select the variables to tabulate in rows and columns respectively.</p>
			</text>
			<copy id="selector" />
			<copy id="var_rows" />
			<copy id="var_columns" />
		</page>
		<embed id="filter_embed" component="rkTeaching::filter_embed"/>		
	</wizard>
</document>
