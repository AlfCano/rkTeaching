<!DOCTYPE rkplugin>
<document>
    <code file="mean_sample_size.js"/>
    <help file="mean_sample_size.rkh"/>
    
    <dialog label="Sample size computation for estimating one mean">
        
        <input id="sd" label="Standard deviation" value="1" required="true" />
        <spinbox id="conflevel" label="Confidence level" type="real" min="0" max="0.99" initial="0.95" />
        <column id="col_error">
            <input id="error" label="Error &#177;" value="1" required="true"/>
            <radio id="error_type" label="Type of error">
                <option value="absolute" label="Absolute" />
                <option value="relative" label="Relative" />
            </radio>
        </column>
    </dialog>
    
    <wizard label="Sample size computation for estimating one mean wizard">
        <page>
            <text>
                Enter the stadard deviation of the population or an estimate of it.
            </text>
            <copy id="sd"/>
        </page>
        <page>
            <text>
                Enter the confidence level for the confidence interval.
            </text>
            <copy id="conflevel"/>
        </page>
        <page>
            <text>
                Enter the maximum error for the estimate and whether is an absolute or relative error. 
            </text>
            <copy id="col_error"/>
        </page>
    </wizard>
</document>
