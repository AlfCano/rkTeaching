<!DOCTYPE rkplugin>
<document>
    <code file="test_t_sample_size.js"/>
    <help file="test_t_sample_size.rkh"/>
    
    <dialog label="Sample size computation for the t-test">
        <row>
            <column id="col_type">
                <radio id="type" label="Type of test">
                    <option value="one.sample" label="One population" />
                    <option value="two.sample" label="Two independent populations" />
                    <option value="paired" label="Two paired populations" />
                </radio>
                <radio id="h1" label="Alternative hypothesis">
                    <option value="two.sided" label="Two-sided" />
                    <option value="one.sided" label="One-sided" />
                </radio>
            </column>
            <column>
                <input id="delta" label="Difference between the means" required="true" />
                <input id="sd" label="Stantdard deviation" value="1" required="true" />
                <spinbox id="siglevel" label="Significance level" type="real" min="0.01" max="1" initial="0.05" />
                <spinbox id="power" label="Power" type="real" min="0.00" max="0.99" initial="0.8" />
            </column>
        </row>
    </dialog>
    
    <wizard label="Sample size computation for the t-test wizard">
        <page>
            <text>
                Check the box corresponding to the type of test.
            </text>
            <copy id="type"/>
        </page>
        <page>
            <text>
                Check the box corresponding to the type of alternative hypothesis.
            </text>
            <copy id="h1"/>
        </page>
        <page>
            <text>
                Enter the difference to detect between the means. 
                In case of only one population enter the value of the mean in the null hypothesis.
            </text>
            <copy id="delta"/>
        </page>
        
        <page>
            <text>
                Enter the stadard deviation of the population or an estimate of it.
            </text>
            <copy id="sd"/>
        </page>
        <page>
            <text>
                Enter de significance level of the test.
            </text>
            <copy id="siglevel"/>
        </page>
        <page>
            <text>
                Enter the power of the test. 
            </text>
            <copy id="power"/>
        </page>		
    </wizard>
</document>
