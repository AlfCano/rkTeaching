<!DOCTYPE rkplugin>
<document>
    <code file="levene_test.js"/>
    <help file="levene_test.rkh"/>
    
    <logic>
        <connect client="filter_embed.variable" governor="variable.available" />
    </logic>
    
    <dialog label="Levene's test for comparing variances">
        <tabbook>
            <tab id="tab_variables" label="Variables">
                <row id="row_vars">
                    <varselector id="selector" label="Select variable(s)" />
                    <column>
                        <varslot id="variable" label="Compare variance of" source="selector" types="number" required="true" />
                        <varslot id="factor" label="According to" source="selector" types="factor" required="true" />
                        <embed id="filter_embed" component="rkTeaching::filter_embed"/>
                        <stretch />
                    </column>
                </row>
            </tab>
            <tab id="tab_settings" label="Test options">
                <radio id="center" label="Variability with respect to">
                    <option value="median" label="Median" />
                    <option value="mean" label="Mean" />
                </radio>
                <stretch />
            </tab>
        </tabbook>
    </dialog>
    
    <wizard label="Levene's test for comparing variances wizard">
        <page>
            <text>
                <p>Select the numeric variable whose variances wants to compare.</p>
                <p>After, select the factor with the levels to compare.</p> 
            </text>
            <copy id="row_vars"/>
        </page>
        <page>
            <text>
                <p>Check the box corresponding to the central tendency measure with respect to which the variability is measured.</p>
            </text>
            <copy id="center"/>
            <stretch/>
        </page>
    </wizard>
</document>
